<UserControl x:Class="PasswordManager.Components.DataBlock"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:svgc="http://sharpvectors.codeplex.com/svgc/" 
             xmlns:local="clr-namespace:PasswordManager.Components"
             mc:Ignorable="d" d:DesignWidth="800" Height="70" Cursor="">
    <Button Style="{DynamicResource DataBlock_Block}" Click="DataBlock_Click">
        <Button.ContextMenu>
            <ContextMenu>
                <MenuItem Header="Edit" Click="EditBlock_Click">
                    <MenuItem.Icon>
                        <svgc:SvgViewbox Source="/Assets/Images/penIcon.svg" />
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="Delete" Click="DeleteBlock_Click">
                    <MenuItem.Icon>
                        <svgc:SvgViewbox Source="/Assets/Images/trashIcon.svg" />
                    </MenuItem.Icon>
                </MenuItem>
            </ContextMenu>
        </Button.ContextMenu>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="70" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Border Background="{DynamicResource MainColor}" BorderThickness="3" CornerRadius="6" SnapsToDevicePixels="True">
                <TextBlock x:Name="InitialsTitle" Text="Un" Foreground="White" FontSize="20" FontWeight="SemiBold" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Border>

            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="40" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <Label Grid.Row="0" x:Name="Title_Content" Content="Undefined" Style="{DynamicResource H1}" />
                <Label Grid.Row="1" x:Name="Login_Content" Content="Undefined" />

                <!--Hidding-->
                <TextBox x:Name="Password_Content" Text="Undefined" Style="{DynamicResource DataBlock_Text}" Visibility="Hidden" />
                <TextBox x:Name="Additional_Content" Text="Undefined" Style="{DynamicResource DataBlock_Text}" Visibility="Hidden" />
            </Grid>
        </Grid>
    </Button>
</UserControl>
