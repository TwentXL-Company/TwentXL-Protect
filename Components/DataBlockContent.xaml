<UserControl x:Class="PasswordManager.Components.DataBlockContent"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:svgc="http://sharpvectors.codeplex.com/svgc/" 
             xmlns:local="clr-namespace:PasswordManager.Components"
             mc:Ignorable="d" 
             d:Background="#FFFFFF"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="70" />
            <RowDefinition Height="*" />
            <RowDefinition Height="50" />
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="70" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="200" />
            </Grid.ColumnDefinitions>
            
            <Border Grid.Column="0" Background="{DynamicResource MainColor}" BorderThickness="3" CornerRadius="6" SnapsToDevicePixels="True">
                <TextBlock x:Name="InitialsTitle" Text="Un" Foreground="White" FontSize="20" FontWeight="SemiBold" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Border>
            <Label x:Name="Title_Content" Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Left" FontSize="26" Content="Undefined" Style="{DynamicResource H1}" />
        </Grid>

        <StackPanel Grid.Row="1" Orientation="Vertical" Margin="20">
            <Grid x:Name="Login_Block" Style="{DynamicResource DataBlockContent_Block}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="100" />
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <Label Style="{DynamicResource H1}">Login</Label>
                    <TextBox x:Name="Login_Content" Text="Undefined" Style="{DynamicResource DataBlock_Text}"/>
                </StackPanel>

                <Button Grid.Column="1" Style="{DynamicResource Button_Link}" Width="20" Click="CopyText_Click" ToolTip="Copy" Tag="1">
                    <svgc:SvgViewbox Source="/Assets/Images/copyIcon.svg" />
                </Button>
            </Grid>

            <Grid x:Name="Password_Block" Style="{DynamicResource DataBlockContent_Block}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="100" />
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <Label Style="{DynamicResource H1}">Password</Label>
                    <TextBox x:Name="Password_Content" Text="Undefined" Style="{DynamicResource DataBlock_Text}" />
                </StackPanel>

                <Button Grid.Column="1" Style="{DynamicResource Button_Link}" Width="20" Click="CopyText_Click" ToolTip="Copy" Tag="2">
                    <svgc:SvgViewbox Source="/Assets/Images/copyIcon.svg" />
                </Button>
            </Grid>

            <Grid x:Name="Additional_Block" Style="{DynamicResource DataBlockContent_Block}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="100" />
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <Label Style="{DynamicResource H1}">Additional info</Label>
                    <TextBox x:Name="Additional_Content" Text="Undefined" Style="{DynamicResource DataBlock_Text}" />
                </StackPanel>

                <Button Grid.Column="1" Style="{DynamicResource Button_Link}" Width="20" Click="CopyText_Click" ToolTip="Copy" Tag="3">
                    <svgc:SvgViewbox Source="/Assets/Images/copyIcon.svg" />
                </Button>
            </Grid>
        </StackPanel>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Left">
            <Label Content="Created: " />
            <Label x:Name="Created_Content" Content="26.12.2002" />
        </StackPanel>
    </Grid>
</UserControl>
