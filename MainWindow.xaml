<Window x:Class="PasswordManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PasswordManager"
        xmlns:comp ="clr-namespace:PasswordManager.Components"
        mc:Ignorable="d"
        Background="{DynamicResource WindowBackground}"
        WindowStyle="None"
        MinWidth="800"
        MinHeight="550"
        WindowStartupLocation="CenterScreen"
        Icon="/Assets/Images/logo_protect_light.png"
        Title="TwentXL Protect" Height="650" Width="950">
    <WindowChrome.WindowChrome>
        <WindowChrome GlassFrameThickness="0"
                      CornerRadius="0"
                      CaptionHeight="0"/>
    </WindowChrome.WindowChrome>
    <Border Background="{DynamicResource WindowBackground}" CornerRadius="0" BorderBrush="#979AAD" BorderThickness="1">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="30" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" Style="{DynamicResource TitleBar}" MouseDown="Titlebar_MouseDown">
                <Label x:Name="PageName" Foreground="#ffffff" HorizontalAlignment="Center" Content="PageName" />

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button x:Name="ButtonMinimize" Width="40" Style="{DynamicResource TitleBar_Button}" Click="ButtonMinimize_Click">
                        <Image Style="{DynamicResource Title_Minimize}" Width="20"/>
                    </Button>
                    <Button x:Name="ButtonMaximize" Width="40" Style="{DynamicResource TitleBar_Button}" Click="ButtonMaximize_Click">
                        <Image Style="{DynamicResource Title_Maximize}" Width="20"/>
                    </Button>
                    <Button x:Name="ButtonClose" Width="40" Style="{DynamicResource TitleBar_Button}" Click="ButtonClose_Click">
                        <Image Style="{DynamicResource Title_Close}" Width="20"/>
                    </Button>
                </StackPanel>
            </Grid>

            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="150" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Grid Grid.Column="0" Background="{DynamicResource MainColor}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="70" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="70" />
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <Image Style="{DynamicResource Logo}"/>
                        <Label Foreground="#FFFFFF" FontSize="20">Protect</Label>
                    </StackPanel>

                    <StackPanel Grid.Row="1" Orientation="Vertical" HorizontalAlignment="Stretch" VerticalAlignment="Center">
                        <Button Style="{DynamicResource Button_Header}" Click="Home_Click">Home</Button>
                        <Button Style="{DynamicResource Button_Header}" Click="Settings_Click">Settings</Button>
                        <Button Style="{DynamicResource Button_Header}" Click="FAQ_Click">FAQ</Button>
                        <Button Style="{DynamicResource Button_Header}" Click="BackupAction_Click">
                            <Button.ContextMenu>
                                <ContextMenu>
                                    <MenuItem Header="Create backup" Click="CreateBackup_Click"/>
                                    <MenuItem Header="Load backup" Click="LoadBackup_Click" />
                                </ContextMenu>
                            </Button.ContextMenu>
                            Backup
                        </Button>
                    </StackPanel>
                </Grid>

                <Grid Grid.Column="1" x:Name="MainControl" />

                <comp:Toast x:Name="MyToast" Grid.Column="1" Panel.ZIndex="99" />
            </Grid>

            <Grid Grid.Row="1" x:Name="ModalDialog_Area" />
        </Grid>
    </Border>
</Window>
